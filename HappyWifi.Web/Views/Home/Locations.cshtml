@model System.Collections.Generic.IEnumerable<HapiWifi.Core.Models.Company>
@using HapiWifi.Core.Models

@{
    ViewBag.Title = "Locations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Locations</h2>

<div class="row">
    <!-- INSET MAP HERE -->
    <div class="col-xs-12 col-sm-12  col-md-12">
        INSERT MAP ON THIS AREA
    </div>

    <!-- Product List -->
    @foreach (var item in Model)
    {
        <div class="media display-modal">
            <div class="media-left pull-left">
                <a href="#">
                    <img class="media-object" src="@item.LogoImagePath" alt="@item.Name" style="height:100px;width:100px;">
                </a>
            </div>
            <div class="media-body">
                <h4 class="media-heading">@item.Name</h4>
                <em class="media-body"><small>"@item.TagLine"</small></em>
                <p>@item.Description</p>
            </div>
        </div>
    }

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header alert alert-grey">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Company Name</h4>
                </div>
                <div class="modal-body">
                    <div class="thumbnail">
                        <img id="company-logo" src="logo/woodcraft.jpg">
                    </div>
                    <p><strong>Description: </strong><br><span id="company-location">Davao</span></p>
                    <p><strong>Price: &#8369</strong><span id="company-caption">100.00</span></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-muted" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

